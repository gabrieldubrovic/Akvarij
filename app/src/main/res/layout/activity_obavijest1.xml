<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akvarij.ldk.main.obavijest.Obavijest1"
    android:background="@drawable/riba3">


        <Button
            android:id="@+id/hranjenje"
            android:layout_width="109dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/textView5"

            android:layout_toEndOf="@+id/textView4"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="POSTAVI"
            android:textColor="#000000"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="217dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="120dp"
            android:text="Alarm za čišćenje"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="217dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="35dp"
            android:text="Alarm za hranjenje"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="111dp"
            android:layout_height="46dp"

            android:layout_alignBottom="@+id/textView4"
            android:layout_alignEnd="@+id/hranjenje"

            android:layout_marginBottom="-6dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="POSTAVI"
            android:textColor="#000000"
            android:textSize="20sp" />

</RelativeLayout>
